<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewUIController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="900.0">
         <center>
            <ImageView fx:id="image" fitHeight="480.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <Pane prefHeight="600.0" prefWidth="900.0">
         <children>
            <Button fx:id="back" mnemonicParsing="false" onAction="#MainUI" prefHeight="20.0" prefWidth="50.0" text="返回" />
            <Button fx:id="previous" layoutY="275.0" mnemonicParsing="false" onAction="#ChangePic_Previous" prefHeight="50.0" prefWidth="50.0" text="&lt;" />
            <Button fx:id="next" layoutX="850.0" layoutY="278.0" mnemonicParsing="false" onAction="#ChangePic_Next" prefHeight="50.0" prefWidth="50.0" text="&gt;" />
            <ToolBar layoutY="550.0" prefHeight="50.0" prefWidth="900.0">
              <items>
                  <Button fx:id="zoomBig" mnemonicParsing="false" onAction="#ZoomEnlarge" text="放大" />
                  <Button fx:id="zoomSmall" mnemonicParsing="false" onAction="#ZoomSmall" text="缩小" />
                  <Button fx:id="PPT" mnemonicParsing="false" onAction="#PPT" text="播放" />
                  <Button fx:id="leftRevolve" mnemonicParsing="false" onAction="#LeftRevolve" text="左转" />
                  <Button fx:id="rightRevolve" mnemonicParsing="false" onAction="#RightRevolve" text="右转" />
              </items>
            </ToolBar>
         </children>
      </Pane>
   </children>
</AnchorPane>
